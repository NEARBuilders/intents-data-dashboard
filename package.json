{
  "name": "plugin-playground",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "plugins/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "every-plugin": "^0.6.1"
    }
  },
  "scripts": {
    "dev": "turbo dev --filter='./apps/*'",
    "dev:plugins": "turbo build --filter='./packages/*' && turbo dev --filter='./plugins/*'",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "generate": "bun plop"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "plop": "^4.0.4",
    "turbo": "^2.6.2"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@types/bun": "^1.3.3",
    "near-kit": "^0.5.4"
  }
}
