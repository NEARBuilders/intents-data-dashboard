{
  "name": "plugin-playground",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "plugins/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "every-plugin": "0.4.13"
    }
  },
  "scripts": {
    "dev": "turbo dev --filter='./apps/*'",
    "dev:plugins": "turbo build --filter='./packages/*' && turbo dev --filter='./plugins/*'",
    "build": "turbo build",
    "check-types": "turbo check-types"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@types/node": "^22.13.11"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@types/bun": "^1.3.3"
  }
}
