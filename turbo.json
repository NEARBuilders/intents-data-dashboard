{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": ["NODE_ENV", "VITE_SERVER_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,        
			"persistent": true,    
			"inputs": ["dist/**", ".env*"]
		}
	}
}
